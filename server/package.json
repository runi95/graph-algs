{
  "name": "graph-algs-server",
  "version": "0.0.1",
  "private": true,
  "main": "src/index.js",
  "scripts": {
    "build": "tsc",
    "postbuild": "node copyAssets.js",
    "start": "node ./dist/src",
    "start:watch": "nodemon -w src -e ts --exec \"npm run build && npm run start\"",
    "test": "ava",
    "lint": "eslint src/**/*.ts"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "fs-extra": "^11.1.1",
    "helmet": "^6.0.1",
    "morgan": "^1.10.0",
    "winston": "^3.8.2"
  },
  "devDependencies": {
    "@ava/typescript": "^4.0.0",
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.17",
    "@types/fs-extra": "^11.0.1",
    "@types/morgan": "^1.9.4",
    "@types/node": "^18.15.11",
    "@typescript-eslint/eslint-plugin": "^5.57.0",
    "ava": "^5.2.0",
    "eslint": "^8.37.0",
    "mocha": "^10.2.0",
    "nodemon": "^2.0.22",
    "ts-node": "^10.9.1",
    "typescript": "^5.0.3"
  },
  "ava": {
    "extensions": [
      "ts"
    ],
    "require": [
      "ts-node/register"
    ],
    "files": [
      "!**/*.d.ts"
    ]
  }
}
